<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sankuai.mapper.UserMapper"> <!--namespace要指定为接口的类路径.-->

    <select id="getByName" parameterType="string" resultType="User">
        select name,email,passwd from test_table where name = #{name}
    </select>

    <select id="insert" parameterType="User">
        insert into test_table(name,email,passwd) VALUES(#{name},#{email},#{passwd})
    </select>

    <select id="getRowCount" resultType="int">
        select count(*) from test_table;
    </select>
    <select id="selectByParams" resultType="User" parameterType="map">
        select name,email,passwd from test_table
        limit ${offset}, ${size}
    </select>
</mapper>